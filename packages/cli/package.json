{
  "name": "@mcampa/ai-context-cli",
  "version": "0.0.1",
  "description": "CLI tool for indexing codebases with AI Context",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-context-index": "./bin/ai-context-index.js"
  },
  "scripts": {
    "build": "pnpm clean && tsc --build --force",
    "dev": "tsx --watch src/index.ts",
    "clean": "rimraf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "tsx src/index.ts",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@mcampa/ai-context-core": "workspace:*",
    "commander": "^12.1.0",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcampa/claude-context.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
