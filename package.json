{
  "name": "claude-context",
  "version": "0.1.3",
  "description": "A powerful code indexing tool with multi-platform support",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter='!./examples/*' build && pnpm -r --filter='./examples/*' build",
    "build:core": "pnpm --filter @mcampa/claude-context-core build",
    "build:mcp": "pnpm --filter @mcampa/claude-context-mcp build",
    "dev": "pnpm -r dev",
    "dev:core": "pnpm --filter @mcampa/claude-context-core dev",
    "dev:mcp": "pnpm --filter @mcampa/claude-context-mcp dev",
    "clean": "pnpm -r clean",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "release:core": "pnpm --filter @mcampa/claude-context-core... run build && pnpm --filter @mcampa/claude-context-core publish --access public --no-git-checks",
    "release:mcp": "pnpm --filter @mcampa/claude-context-mcp... run build && pnpm --filter @mcampa/claude-context-mcp publish --access public --no-git-checks"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "eslint": "^9.25.1",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "stream-http": "^3.2.0",
    "tree-sitter-cli": "^0.25.6",
    "typescript": "^5.8.3",
    "url": "^0.11.4",
    "vm-browserify": "^1.1.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcampa/claude-context.git"
  },
  "license": "MIT",
  "author": "Cheney Zhang <277584121@qq.com>",
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
}
